doctype html
html
  head
    meta(charset="UTF-8")
    title
      block title
        | #{app.name}
    block twittercards
      meta(name="twitter:card",content="summary")
      meta(name="twitter:site",content=app.author)
      meta(name="twitter:title",content=app.name)
      meta(name="twitter:description",content=app.description)
    block metas
    meta(name="viewport",content="width=device-width")
    link(rel="stylesheet",href="/static/css.css")
    //- for social button
    script(src="https://b.st-hatena.com/js/bookmark_button.js",async)
    script(src="https://apis.google.com/js/platform.js",async.defer)
  body
    main#main
      block content
    footer#footer
      div
        h1= app.name
        p= app.description
        nav
          p
            a(href="/") 新しいプログラミング言語を作成
          hr
          ul
            li
              a(href="https://github.com/uhyo/bf-gen",target="_blank",rel="external") GitHub
            li
              a(href="https://uhy.ooo/",target="_blank",rel="external") 開発者



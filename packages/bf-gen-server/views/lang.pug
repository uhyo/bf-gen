block title
  | #{lang.name}
block twittercards
  meta(name="twitter:card",content="summary")
  meta(name="twitter:title",content=lang.name)
  meta(name="twitter:description",content=lang.description)
block metas
  link(rel="canonical",href= app.origin + "/lang/" + lang.id)
block content
  div#app
  script(src="/static/bundle.js")
  script.
    BF.init(!{JSON.stringify(lang)},!{JSON.stringify(owner)});
